@model IEnumerable<DoorDelightsProject.Models.Restaurant>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<h2>Menu</h2>
<style>

    .iconDetails {
        margin-left: 2%;
        float: left;
    }

    .container1 {
        width: 110%;
        height: auto;
        padding: 1%;
    }

    h4 {
        margin: 0px;
        font-size: 3em;
        color: black;
    }

    .text {
        font-size: 17px;
        color: black;
    }

    .defaultpage_menu {
        text-decoration: none;
    }

        .defaultpage_menu:hover {
            text-decoration: none;
        }

    .edit {
        position: absolute;
        right: 185px;
    }

    .Details {
        position: absolute;
        right: 130px;
    }

    .Delete {
        position: absolute;
        right: 80px;
    }

    .line1 {
        position: absolute;
        right: 180px;
    }

    .line2 {
        position: absolute;
        right: 125px;
    }

    .icon-1 {
        position: absolute;
        right: 185px;
        width: 20px;
        height: 20px;
    }

    .icon-2 {
        position: absolute;
        right: 130px;
        width: 20px;
        height: 20px;
    }

    .icon-3 {
        position: absolute;
        right: 80px;
        width: 20px;
        height: 20px;
    }

    .createicon {
        position: absolute;
        left: 10px;
        width: 40px;
        height: 40px;
    }

    a {
        text-decoration: none;
    }

        a:hover {
            text-decoration: none;
        }

    .creatediv {
        width: 150px;
        height: 50px;
        margin-top: 20px;
    }

    .container {
        margin-left: 30px;
    }

    .create {
        border-radius: 0px;
        font-family: 'Pacifico', cursive;
        color: white;
        border: none;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin: 0px 0px;
        cursor: pointer;
        padding: 9px 0px;
        font-size: 20px;
        /*background-color: dimgrey;*/
        width: 80%;
    }
    .open1{
        color:green;
    }
    .close1{
        color:red;
    }
</style>
<body>
    <div class="creatediv">
        <img src="~/Content/Images/plus.png" class="createicon" />
        <div class="create">
            @Html.ActionLink("Create New", "AddRestaurant", "Admin")
        </div>
    </div>
    @foreach (var item in Model)
    {
        var rating = item.RestaurantRating.ToString();
        <a href="@Url.Action("ViewFoodItems","Admin",new RouteValueDictionary(new { id = item.RestaurantId }))" class="defaultpage_menu">
            <div class="container1">
                <div>
                    <img src="@Url.Content(item.RestaurantImage)" width="250" height="250" class="iconDetails" />
                </div>
                <div style="margin-left:300px;width:100%;height:100%">
                    <h4>@Html.DisplayFor(model => item.RestaurantName)</h4>
                    <div class="text">
                        @Html.DisplayFor(model => item.RestaurantType)
                    </div>
                    <div class="text">
                        @Html.DisplayFor(model => item.RestaurantLocation)
                    </div>
                    <div class="text">
                        @Html.DisplayFor(model=>rating)
                    </div>
                    <div class="text">
                        @Html.DisplayFor(model => item.DeliveryTime)
                    </div>
                    @{
                        if (item.Isclosed)
                        {
                            <div class="close1 text">
                                @Html.DisplayName("Closed")
                            </div>
                        }
                        else
                        {
                            <div class="open1 text">
                                @Html.DisplayName("Open")
                            </div>
                        }
                    }

                    <a href="@Url.Action("Edit","Admin", new{ id = item.RestaurantId })">
                        <img src="~/Content/Images/edit.png" class="icon-1" />
                    </a>

                    @*<div class="line1">|</div>*@
                    <a href="@Url.Action("Details","Admin", new{ id = item.RestaurantId })">

                        <img src="~/Content/Images/clipboard.png" class="icon-2" />
                    </a>
                    @*<div class="line2">|</div>*@
                    <a href="@Url.Action("Delete","Admin", new{ id = item.RestaurantId })">

                        <img src="~/Content/Images/delete.png" class="icon-3" />
                    </a>
                </div>
                <hr width="100%" size="3" />
            </div>
        </a>
    }
</body>
